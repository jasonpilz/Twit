<div class="ui card">
  <div class="image">
    <img src="<%= @user.profile_image_url %>">
  </div>
  <div class="content">
    <a class="header"><%= @user.name %></a><p> @<%= @user.screen_name %></p>
    <div class="meta">
      <span class="date">Joined in <%= @user.created_at.strftime("%Y") %></span>
    </div>
    <div class="description">
      <%= @user.description %>
    </div>
  </div>
  <div class="extra content">
    <%= @user.followers_count %> Followers | <%= @user.friends_count %> Following
  </div>
</div>
