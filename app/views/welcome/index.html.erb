<body class="gradient" />

<div class="ui container center aligned centered">
  <h1 class="greeting">Twit</h1>
  <% if current_user %>
    </p>Hello, <%= current_user.name %></p>
    <div class="ui buttons">
      <a href="<%= logout_path %>">
        <button class="ui inverted button">Logout</button>
      </a>
      <div class="or"></div>
      <a href="/<%= current_user.screen_name %>">
        <button class="ui blue button">Home</button>
      </a>
    </div>
  <% else %>
    <p class="login-with">Login with</p>
    <a href="<%= login_path %>">
      <button class="ui twitter button" id="twitter-login">
        <i class="twitter icon"></i>
        Twitter
      </button>
    </a>
  <% end %>
</div>
